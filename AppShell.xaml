<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AmoraApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AmoraApp.Views"
    Shell.NavBarIsVisible="False">

    <!-- ESTILOS DO TABBAR (cores do menu inferior) -->
    <Shell.Resources>
        <Style TargetType="TabBar">
            <!-- TabBar bem branca -->
            <Setter Property="Shell.TabBarBackgroundColor" Value="#FFFFFFFF" />

            <!-- Ícones / textos -->
            <Setter Property="Shell.TabBarForegroundColor" Value="#FF4E8A" />
            <Setter Property="Shell.TabBarTitleColor" Value="#FF4E8A" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#999999" />
        </Style>
    </Shell.Resources>

    <!--
        - Android / iOS: ícone + texto
        - Windows (WinUI): somente ícone (Title vazio)
    -->
    <TabBar>

        <!-- Discover (swipe) -->
        <ShellContent
            Route="discover"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:DiscoverPage}"
            Title="{OnPlatform Android='Discover', iOS='Discover', WinUI=''}" />

        <!-- Feed -->
        <ShellContent
            Route="feed"
            Icon="feed.png"
            ContentTemplate="{DataTemplate views:FeedPage}"
            Title="{OnPlatform Android='Feed', iOS='Feed', WinUI=''}" />

        <!-- Chat -->
        <ShellContent
            Route="chatlist"
            Icon="chat.png"
            ContentTemplate="{DataTemplate views:ChatListPage}"
            Title="{OnPlatform Android='Chat', iOS='Chat', WinUI=''}" />

        <!-- Profile -->
        <ShellContent
            Route="profile"
            Icon="user.png"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Title="{OnPlatform Android='Profile', iOS='Profile', WinUI=''}" />

    </TabBar>
</Shell>
