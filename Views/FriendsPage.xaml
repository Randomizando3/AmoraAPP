<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.FriendsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F1F2F6"
    Shell.NavBarIsVisible="False"
    Title="Amigos">

    <Grid RowDefinitions="Auto,*" Padding="16,32,16,16">

        <!-- HEADER -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*"
              VerticalOptions="Center">

            <ImageButton
                Grid.Column="0"
                Source="back.png"
                BackgroundColor="Transparent"
                WidthRequest="26"
                HeightRequest="26"
                Clicked="OnBackClicked" />

            <Label
                Grid.Column="1"
                Text="Seus amigos"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#262626"
                VerticalOptions="Center"
                Margin="12,0,0,0" />
        </Grid>

        <!-- LISTA DE AMIGOS -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Friends}"
            Margin="0,16,0,0">

            <CollectionView.EmptyView>
                <StackLayout Padding="0,40,0,0" HorizontalOptions="Center">
                    <Label
                        Text="Você ainda não tem amigos adicionados."
                        TextColor="#777"
                        FontSize="14"
                        HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,0,0,12"
                        Padding="10"
                        CornerRadius="16"
                        BackgroundColor="White"
                        HasShadow="True">

                        <Grid ColumnDefinitions="Auto,*"
                              ColumnSpacing="10"
                              VerticalOptions="Center">

                            <!-- FOTO -->
                            <Frame
                                WidthRequest="48"
                                HeightRequest="48"
                                CornerRadius="24"
                                Padding="0"
                                HasShadow="False"
                                BackgroundColor="#E8E4FF">

                                <Image
                                    Source="{Binding PhotoUrl}"
                                    Aspect="AspectFill">
                                    <Image.Clip>
                                        <EllipseGeometry Center="24,24"
                                                         RadiusX="24"
                                                         RadiusY="24" />
                                    </Image.Clip>
                                </Image>
                            </Frame>

                            <!-- INFO -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="2"
                                                 VerticalOptions="Center">
                                <Label
                                    Text="{Binding DisplayName}"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    TextColor="#262626" />

                                <Label
                                    Text="{Binding Email}"
                                    FontSize="12"
                                    TextColor="#777" />
                            </VerticalStackLayout>

                        </Grid>

                        <!-- Tap no card -->
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnFriendTapped"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
