<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.MessagesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F1F2F6"
    Title="Mensagens"
    Shell.NavBarIsVisible="False">

    <Grid Padding="16,32,16,16" RowDefinitions="Auto,*">

        <!-- Cabeçalho -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <Label
                Text="Mensagens"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="#262626"
                VerticalOptions="Center" />
        </Grid>

        <!-- Card explicativo -->
        <Frame
            Grid.Row="1"
            Margin="0,16,0,0"
            CornerRadius="8"
            HasShadow="True"
            BackgroundColor="White"
            Padding="16">

            <VerticalStackLayout Spacing="8">
                <Label
                    Text="Aqui você vê suas conversas, matches e amigos."
                    FontSize="14"
                    TextColor="#444" />

                <Label
                    Text="Use a aba de conversas para abrir um chat ou iniciar uma nova conversa a partir dos seus matches e amigos."
                    FontSize="13"
                    TextColor="#777" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
