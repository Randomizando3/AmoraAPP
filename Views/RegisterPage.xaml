<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFF5F9"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*" Padding="24,40,24,24">

        <VerticalStackLayout Grid.Row="0" Spacing="6">
            <Label
                Text="Create your account"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#262626" />
            <Label
                Text="Join AmoraApp and start matching."
                FontSize="14"
                TextColor="#777777" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="18">
                <Frame
                    CornerRadius="18"
                    Padding="18"
                    BackgroundColor="White"
                    HasShadow="True">
                    <VerticalStackLayout Spacing="12">

                        <Label Text="Name" TextColor="#555" FontSize="13" />
                        <Entry
                            Placeholder="Your name"
                            Text="{Binding DisplayName}"
                            TextColor="#222"
                            PlaceholderColor="#BBBBBB" />

                        <Label Text="Email Address" TextColor="#555" FontSize="13" />
                        <Entry
                            Placeholder="your@email.com"
                            Text="{Binding Email}"
                            Keyboard="Email"
                            TextColor="#222"
                            PlaceholderColor="#BBBBBB" />

                        <Label Text="Password" TextColor="#555" FontSize="13" />
                        <Entry
                            Placeholder="••••••••"
                            Text="{Binding Password}"
                            IsPassword="True"
                            TextColor="#222"
                            PlaceholderColor="#BBBBBB" />

                        <Label
                            Text="{Binding ErrorMessage}"
                            TextColor="Red"
                            FontSize="12" />

                        <ActivityIndicator
                            IsRunning="{Binding IsBusy}"
                            IsVisible="{Binding IsBusy}"
                            Color="#FF4E8A" />

                        <Button
                            Text="Create account"
                            Command="{Binding RegisterCommand}"
                            CornerRadius="22"
                            HeightRequest="48"
                            TextColor="White"
                            Margin="0,8,0,0">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF4E8A" Offset="0.0" />
                                    <GradientStop Color="#FF74A8" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
