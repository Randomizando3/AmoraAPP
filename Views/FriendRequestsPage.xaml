<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.FriendRequestsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFF5F9"
    Title="Solicitações">

    <Grid RowDefinitions="Auto,*" Padding="16,32,16,16">

        <!-- HEADER -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <ImageButton
                Grid.Column="0"
                Source="back.png"
                BackgroundColor="Transparent"
                WidthRequest="24"
                HeightRequest="24"
                Clicked="OnBackClicked" />

            <Label
                Grid.Column="1"
                Text="Solicitações de amizade"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#262626"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Margin="12,0,0,0" />
        </Grid>

        <!-- LISTA DE SOLICITAÇÕES -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Requests}"
            Margin="0,16,0,0">

            <CollectionView.EmptyView>
                <StackLayout Padding="0,40,0,0" HorizontalOptions="Center">
                    <Label
                        Text="Nenhuma solicitação pendente."
                        TextColor="#888"
                        FontSize="14"
                        HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,0,0,12"
                        Padding="12"
                        CornerRadius="18"
                        BackgroundColor="White"
                        HasShadow="True">

                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">

                            <!-- FOTO -->
                            <Frame
                                WidthRequest="44"
                                HeightRequest="44"
                                CornerRadius="22"
                                HasShadow="False"
                                BackgroundColor="#FFE0EB">
                                <Image
                                    Source="{Binding PhotoUrl}"
                                    Aspect="AspectFill">
                                    <Image.Clip>
                                        <EllipseGeometry Center="22,22" RadiusX="22" RadiusY="22" />
                                    </Image.Clip>
                                </Image>
                            </Frame>

                            <!-- NOME/INFO -->
                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label
                                    Text="{Binding DisplayName}"
                                    FontAttributes="Bold"
                                    TextColor="#262626" />
                                <Label
                                    Text="{Binding Email}"
                                    FontSize="11"
                                    TextColor="#999999" />
                            </StackLayout>

                            <!-- ACEITAR -->
                            <Button
                                Grid.Column="2"
                                Text="Aceitar"
                                Padding="10,6"
                                FontSize="12"
                                BackgroundColor="#FF4E8A"
                                TextColor="White"
                                CornerRadius="16"
                                Clicked="OnAcceptClicked" />

                            <!-- RECUSAR -->
                            <Button
                                Grid.Column="3"
                                Text="Recusar"
                                Padding="10,6"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                TextColor="#666"
                                Clicked="OnRejectClicked" />

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
