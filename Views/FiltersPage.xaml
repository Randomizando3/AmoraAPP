<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.FiltersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HEADER -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Padding="16,40,16,12">

            <Label Text="Filtros"
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#222" />

            <Label Text="×"
                   Grid.Column="2"
                   FontSize="30"
                   Padding="4"
                   TextColor="#444">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- BODY -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="24">

                <!-- GÊNERO -->
                <VerticalStackLayout>
                    <Label Text="Mostrar:"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="10" Margin="0,6,0,0">

                        <Button x:Name="GirlsButton"
                                Text="Mulheres"
                                Clicked="OnGirlsClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                        <Button x:Name="BoysButton"
                                Text="Homens"
                                Clicked="OnBoysClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                        <Button x:Name="BothButton"
                                Text="Todos"
                                Clicked="OnBothClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- IDADE -->
                <VerticalStackLayout>
                    <Label Text="Idade máxima"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Slider
                        x:Name="AgeSlider"
                        Minimum="18"
                        Maximum="60"
                        Value="{Binding MaxAgeFilter, Mode=TwoWay}"
                        Margin="0,6,0,0" />

                    <Label Text="{Binding MaxAgeFilter, StringFormat='Até {0} anos'}"
                           HorizontalOptions="Center"
                           TextColor="#555" />
                </VerticalStackLayout>

                <!-- DISTÂNCIA -->
                <VerticalStackLayout>
                    <Label Text="Distância máxima"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Slider
                        x:Name="DistanceSlider"
                        Minimum="1"
                        Maximum="100"
                        Value="{Binding DistanceFilterKm, Mode=TwoWay}"
                        Margin="0,6,0,0" />

                    <Label Text="{Binding DistanceFilterKm, StringFormat='{0} km'}"
                           HorizontalOptions="Center"
                           TextColor="#555" />
                </VerticalStackLayout>

                <!-- PROFISSÃO -->
                <VerticalStackLayout>
                    <Label Text="Profissão (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        x:Name="ProfessionEntry"
                        Text="{Binding ProfessionFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Desenvolvedor, Designer..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>

                <!-- ESCOLARIDADE -->
                <VerticalStackLayout>
                    <Label Text="Escolaridade (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        x:Name="EducationEntry"
                        Text="{Binding EducationFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Superior completo, Técnico..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>

                <!-- RELIGIÃO -->
                <VerticalStackLayout>
                    <Label Text="Religião (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        x:Name="ReligionEntry"
                        Text="{Binding ReligionFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Católica, Evangélica, Espírita..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>

                <!-- ORIENTAÇÃO SEXUAL -->
                <VerticalStackLayout>
                    <Label Text="Orientação sexual (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        x:Name="OrientationEntry"
                        Text="{Binding OrientationFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Heterossexual, Bissexual..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>

                <!-- INTERESSES -->
                <VerticalStackLayout>
                    <Label Text="Interesses em comum"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Label Text="(Selecione um ou mais hobbies)"
                           FontSize="12"
                           TextColor="#777" />

                    <FlexLayout
                        Margin="0,8,0,0"
                        Wrap="Wrap"
                        AlignItems="Center"
                        BindableLayout.ItemsSource="{Binding AvailableFilterInterests}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Padding="10,5"
                                    Margin="0,6,8,0"
                                    HasShadow="False"
                                    CornerRadius="16">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnInterestTapped" />
                                    </Frame.GestureRecognizers>

                                    <Frame.Triggers>
                                        <DataTrigger
                                            TargetType="Frame"
                                            Binding="{Binding IsSelected}"
                                            Value="True">
                                            <Setter Property="BackgroundColor" Value="#FFE7F4" />
                                            <Setter Property="BorderColor" Value="#F3C9E2" />
                                        </DataTrigger>
                                        <DataTrigger
                                            TargetType="Frame"
                                            Binding="{Binding IsSelected}"
                                            Value="False">
                                            <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                            <Setter Property="BorderColor" Value="#DDDDDD" />
                                        </DataTrigger>
                                    </Frame.Triggers>

                                    <Label
                                        Text="{Binding Name}"
                                        FontSize="12"
                                        TextColor="#FF4E8A" />
                                </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- FOOTER -->
        <Grid Grid.Row="2"
              Padding="16,12"
              ColumnDefinitions="*,*"
              ColumnSpacing="12">

            <Button Text="Redefinir"
                    BackgroundColor="#EDEDED"
                    TextColor="#444"
                    CornerRadius="16"
                    Clicked="OnResetClicked" />

            <Button Text="Aplicar"
                    BackgroundColor="#FF4E8A"
                    TextColor="White"
                    CornerRadius="16"
                    Clicked="OnApplyFilterClicked" />

        </Grid>
    </Grid>

</ContentPage>
