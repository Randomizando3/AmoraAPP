<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.FiltersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HEADER -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Padding="16,40,16,12">

            <Label Text="Filtros"
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#222" />

            <Label Text="×"
                   Grid.Column="2"
                   FontSize="30"
                   Padding="4"
                   TextColor="#444">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- BODY -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="24">

                <!-- GÊNERO -->
                <VerticalStackLayout>
                    <Label Text="Mostrar:"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="10" Margin="0,6,0,0">

                        <Button x:Name="GirlsButton"
                                Text="Mulheres"
                                Clicked="OnGirlsClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                        <Button x:Name="BoysButton"
                                Text="Homens"
                                Clicked="OnBoysClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                        <Button x:Name="BothButton"
                                Text="Todos"
                                Clicked="OnBothClicked"
                                BackgroundColor="#F5F5F5"
                                TextColor="#555"
                                CornerRadius="12"
                                Padding="12,8" />

                    </HorizontalStackLayout>
                </VerticalStackLayout>


                <!-- FAIXA DE IDADE -->
                <VerticalStackLayout>
                    <Label Text="Faixa de idade"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Label Text="{Binding AgeRangeLabel}"
                           HorizontalOptions="Center"
                           Margin="0,4,0,8"
                           TextColor="#555" />

                    <Label Text="Idade mínima"
                           FontSize="13"
                           TextColor="#777" />

                    <Slider
                        x:Name="MinAgeSlider"
                        Minimum="18"
                        Maximum="120"
                        Value="{Binding MinAgeFilter, Mode=TwoWay}"
                        Margin="0,2,0,6" />

                    <Label Text="Idade máxima"
                           FontSize="13"
                           TextColor="#777" />

                    <Slider
                        x:Name="MaxAgeSlider"
                        Minimum="18"
                        Maximum="120"
                        Value="{Binding MaxAgeFilter, Mode=TwoWay}"
                        Margin="0,2,0,0" />
                </VerticalStackLayout>


                <!-- DISTÂNCIA -->
                <VerticalStackLayout>
                    <Label Text="Distância máxima"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Slider
                        x:Name="DistanceSlider"
                        Minimum="1"
                        Maximum="200"
                        Value="{Binding DistanceFilterKm, Mode=TwoWay}"
                        Margin="0,6,0,0" />

                    <Label Text="{Binding DistanceFilterLabel}"
                           HorizontalOptions="Center"
                           TextColor="#555" />
                </VerticalStackLayout>


                <!-- PROFISSÃO -->
                <VerticalStackLayout>
                    <Label Text="Profissão (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        Text="{Binding ProfessionFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Desenvolvedor, Designer, Professor..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>


                <!-- ESCOLARIDADE -->
                <VerticalStackLayout>
                    <Label Text="Escolaridade"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <CollectionView
                        Margin="0,6,0,0"
                        ItemsSource="{Binding EducationFilterOptions}"
                        SelectionMode="Single"
                        SelectedItem="{Binding EducationFilter, Mode=TwoWay}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" Span="2" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,6,8,0"
                                       Padding="12,6"
                                       CornerRadius="14"
                                       HasShadow="False">

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                                    <Setter Property="BorderColor" Value="#DDDDDD" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#5d259c" />
                                                    <Setter Property="BorderColor" Value="#5d259c" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <Label Text="{Binding .}"
                                           FontSize="13"
                                           TextColor="#222" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>


                <!-- RELIGIÃO -->
                <VerticalStackLayout>
                    <Label Text="Religião (contém)"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <Entry
                        Text="{Binding ReligionFilter, Mode=TwoWay}"
                        Placeholder="Ex.: Católica, Evangélica, Espírita..."
                        Margin="0,6,0,0" />
                </VerticalStackLayout>


                <!-- ORIENTAÇÃO SEXUAL -->
                <VerticalStackLayout>
                    <Label Text="Orientação sexual"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <CollectionView
                        x:Name="OrientationsCollectionView"
                        Margin="0,6,0,0"
                        ItemsSource="{Binding OrientationFilterOptions}"
                        SelectionMode="Multiple"
                        SelectionChanged="OnOrientationsSelectionChanged">

                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" Span="2" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,6,8,0"
                                       Padding="12,6"
                                       CornerRadius="14"
                                       HasShadow="False">

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                                    <Setter Property="BorderColor" Value="#DDDDDD" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#5d259c" />
                                                    <Setter Property="BorderColor" Value="#5d259c" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <Label Text="{Binding .}"
                                           FontSize="13"
                                           TextColor="#222" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- BUSCO POR (amizade / namoro / casamento / casual) -->
                <VerticalStackLayout>
                    <Label Text="Busco por"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <CollectionView
                        x:Name="LookingForCollectionView"
                        Margin="0,6,0,0"
                        ItemsSource="{Binding LookingForFilterOptions}"
                        SelectionMode="Multiple"
                        SelectionChanged="OnLookingForSelectionChanged">

                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" Span="2" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,6,8,0"
                                       Padding="12,6"
                                       CornerRadius="14"
                                       HasShadow="False">

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                                    <Setter Property="BorderColor" Value="#DDDDDD" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#5d259c" />
                                                    <Setter Property="BorderColor" Value="#5d259c" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <Label Text="{Binding .}"
                                           FontSize="13"
                                           TextColor="#222" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- INTERESSES (multi) -->
                <VerticalStackLayout>
                    <Label Text="Interesses"
                           FontSize="16"
                           TextColor="#222"
                           FontAttributes="Bold" />

                    <CollectionView
                        x:Name="InterestsCollectionView"
                        Margin="0,6,0,0"
                        ItemsSource="{Binding InterestFilterOptions}"
                        SelectionMode="Multiple"
                        SelectionChanged="OnInterestsSelectionChanged">

                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" Span="3" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,6,8,0"
                                       Padding="10,4"
                                       CornerRadius="14"
                                       HasShadow="False">

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#FFE7F4" />
                                                    <Setter Property="BorderColor" Value="#F3C9E2" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#5d259c" />
                                                    <Setter Property="BorderColor" Value="#5d259c" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="#222" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- FOOTER -->
        <Grid Grid.Row="2"
              Padding="16,12"
              ColumnDefinitions="*,*"
              ColumnSpacing="12">

            <Button Grid.Column="0"
                    Text="Redefinir"
                    BackgroundColor="#EDEDED"
                    TextColor="#444"
                    CornerRadius="16"
                    Clicked="OnResetClicked" />

            <Button Grid.Column="1"
                    Text="Aplicar"
                    BackgroundColor="#5d259c"
                    TextColor="White"
                    CornerRadius="16"
                    Clicked="OnApplyFilterClicked" />

        </Grid>

    </Grid>

</ContentPage>
