<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.UpgradePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFF5F9"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*" Padding="16,32,16,16">

        <!-- HEADER -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*"
              VerticalOptions="Center">
            <ImageButton
                Source="back.png"
                WidthRequest="28"
                HeightRequest="28"
                BackgroundColor="Transparent"
                Clicked="OnBackClicked" />

            <StackLayout Grid.Column="1"
                         Orientation="Vertical"
                         Spacing="2"
                         Margin="8,0,0,0">
                <Label Text="Upgrade de plano"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#222222" />
                <Label x:Name="CurrentPlanLabel"
                       Text="Seu plano atual é: Grátis"
                       FontSize="13"
                       TextColor="#7C7C7C" />
            </StackLayout>
        </Grid>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="18">

                <!-- Aviso rápido -->
                <Frame BackgroundColor="#FFEDE7F6"
                       Padding="12"
                       CornerRadius="16"
                       HasShadow="False">
                    <Label Text="Desbloqueie boosts, likes ilimitados, grupos e muito mais com o Plus e o Premium."
                           FontSize="13"
                           TextColor="#5d259c" />
                </Frame>

                <!-- PLANOS -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Planos"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#222222" />

                    <!-- Toggle Mensal / Anual -->
                    <HorizontalStackLayout Spacing="8" Margin="0,4,0,4">
                        <Frame x:Name="MonthlyChip"
                               Padding="10,4"
                               CornerRadius="16"
                               HasShadow="False"
                               BackgroundColor="#5d259c">
                            <Label x:Name="MonthlyChipLabel"
                                   Text="Mensal"
                                   FontSize="12"
                                   TextColor="White" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMonthlyTapped" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <Frame x:Name="YearlyChip"
                               Padding="10,4"
                               CornerRadius="16"
                               HasShadow="False"
                               BackgroundColor="Transparent"
                               BorderColor="#5d259c">
                            <Label x:Name="YearlyChipLabel"
                                   Text="Anual"
                                   FontSize="12"
                                   TextColor="#5d259c" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnYearlyTapped" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </HorizontalStackLayout>

                    <!-- Plano Grátis -->
                    <Frame BackgroundColor="White"
                           CornerRadius="18"
                           HasShadow="False"
                           Padding="14">
                        <VerticalStackLayout Spacing="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Grátis"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#222222" />
                                <Label Grid.Column="1"
                                       Text="R$ 0/mês"
                                       FontSize="13"
                                       TextColor="#888888" />
                            </Grid>

                            <Label Text="Perfeito para começar a usar o Amora."
                                   FontSize="12"
                                   TextColor="#777777" />

                            <VerticalStackLayout Spacing="2" Margin="0,4,0,0">
                                <Label Text="• Likes limitados por dia"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Sem criação de grupos"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Não vê quem te curtiu"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Pode ver anúncios"
                                       FontSize="12"
                                       TextColor="#555555" />
                            </VerticalStackLayout>

                            <Button Text="Seu plano atual"
                                    x:Name="FreePlanButton"
                                    Margin="0,8,0,0"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    FontSize="13"
                                    TextColor="#5d259c"
                                    BackgroundColor="#F3E8FF"
                                    IsEnabled="False" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Plano Plus -->
                    <Frame BackgroundColor="White"
                           CornerRadius="18"
                           HasShadow="False"
                           Padding="14">
                        <VerticalStackLayout Spacing="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Plus"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#222222" />
                                <Label x:Name="PlusPriceLabel"
                                       Grid.Column="1"
                                       Text="R$ 29,90/mês"
                                       FontSize="13"
                                       TextColor="#888888" />
                            </Grid>

                            <Label Text="Mais liberdade, mais matches, sem exagerar no preço."
                                   FontSize="12"
                                   TextColor="#777777" />

                            <VerticalStackLayout Spacing="2" Margin="0,4,0,0">
                                <Label Text="• Likes ilimitados"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• 5 boosts por período incluídos"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Ver quem curtiu você"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Criar e participar de grupos"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Voltar um swipe por vez"
                                       FontSize="12"
                                       TextColor="#555555" />
                                <Label Text="• Menos anúncios"
                                       FontSize="12"
                                       TextColor="#555555" />
                            </VerticalStackLayout>

                            <Button Text="Assinar Plus"
                                    x:Name="PlusPlanButton"
                                    Margin="0,8,0,0"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    FontSize="13"
                                    TextColor="White"
                                    BackgroundColor="#5d259c"
                                    Clicked="OnPlusPlanClicked" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Plano Premium -->
                    <Frame BackgroundColor="#5d259c"
                           CornerRadius="20"
                           HasShadow="False"
                           Padding="16">
                        <VerticalStackLayout Spacing="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Premium"
                                       FontSize="17"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label x:Name="PremiumPriceLabel"
                                       Grid.Column="1"
                                       Text="R$ 49,90/mês"
                                       FontSize="13"
                                       TextColor="#FBE7FF" />
                            </Grid>

                            <Label Text="Tudo do Plus + prioridade máxima e vídeos no perfil."
                                   FontSize="12"
                                   TextColor="#FBE7FF" />

                            <VerticalStackLayout Spacing="2" Margin="0,4,0,0">
                                <Label Text="• Likes ilimitados"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• 10 boosts por período incluídos"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• Ver quem curtiu você"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• Criação de grupos avançados"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• Voltar vários swipes"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• Vídeos no perfil liberados"
                                       FontSize="12"
                                       TextColor="White" />
                                <Label Text="• Prioridade máxima na pilha"
                                       FontSize="12"
                                       TextColor="White" />
                            </VerticalStackLayout>

                            <Button Text="Assinar Premium"
                                    x:Name="PremiumPlanButton"
                                    Margin="0,10,0,0"
                                    HeightRequest="42"
                                    CornerRadius="22"
                                    FontSize="13"
                                    TextColor="#5d259c"
                                    BackgroundColor="White"
                                    Clicked="OnPremiumPlanClicked" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- BOOSTS AVULSOS -->
                <VerticalStackLayout Spacing="8" Margin="0,4,0,0">
                    <Label Text="Boosts avulsos"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#222222" />

                    <Label x:Name="BoostsInfoLabel"
                           Text="Você tem 0 boosts disponíveis."
                           FontSize="12"
                           TextColor="#777777" />

                    <HorizontalStackLayout Spacing="10">

                        <Frame BackgroundColor="White"
                               CornerRadius="16"
                               HasShadow="False"
                               Padding="10"
                               WidthRequest="110">
                            <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                                <Label Text="3 Boosts"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#222222" />
                                <Label Text="R$ 9,90"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="#777777" />
                                <Button Text="Comprar"
                                        FontSize="11"
                                        HeightRequest="32"
                                        CornerRadius="16"
                                        Padding="6,0"
                                        BackgroundColor="#5d259c"
                                        TextColor="White"
                                        Clicked="OnBuy3BoostsClicked" />
                            </VerticalStackLayout>
                        </Frame>

                        <Frame BackgroundColor="White"
                               CornerRadius="16"
                               HasShadow="False"
                               Padding="10"
                               WidthRequest="120">
                            <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                                <Label Text="10 Boosts"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#222222" />
                                <Label Text="R$ 24,90"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="#777777" />
                                <Button Text="Comprar"
                                        FontSize="11"
                                        HeightRequest="32"
                                        CornerRadius="16"
                                        Padding="6,0"
                                        BackgroundColor="#5d259c"
                                        TextColor="White"
                                        Clicked="OnBuy10BoostsClicked" />
                            </VerticalStackLayout>
                        </Frame>

                    </HorizontalStackLayout>

                    <Label Text="Boost deixa seu perfil no topo por alguns minutos, aumentando muito as chances de match."
                           FontSize="11"
                           TextColor="#888888" />
                </VerticalStackLayout>

                <!-- ADMOB / ANÚNCIO (placeholder visual) -->
                <Frame BackgroundColor="#EDEDED"
                       CornerRadius="14"
                       HasShadow="False"
                       Padding="12"
                       Margin="0,8,0,0">
                    <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                        <Label Text="Área de anúncio"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#555555"
                               HorizontalOptions="Center" />
                        <Label Text="(Aqui entra o banner do AdMob no plano grátis)"
                               FontSize="11"
                               TextColor="#777777"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
