<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.LikesReceivedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFF5F9"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- TOPO / HEADER -->
        <Grid Grid.Row="0"
              Padding="12,32,12,12"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Start">

            <!-- Voltar -->
            <ImageButton
                Source="back.png"
                WidthRequest="28"
                HeightRequest="28"
                BackgroundColor="Transparent"
                Clicked="OnBackButtonClicked" />

            <!-- TÃ­tulo -->
            <StackLayout Grid.Column="1"
                         Orientation="Vertical"
                         Spacing="0"
                         Margin="12,0,0,0"
                         VerticalOptions="Center">
                <Label
                    Text="Quem curtiu vocÃª"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="#222222" />
                <Label
                    Text="Veja quem te deu like"
                    FontSize="12"
                    TextColor="#777777" />
            </StackLayout>

        </Grid>

        <!-- LISTA DE LIKES (2 por linha) -->
        <ScrollView Grid.Row="1"
                    Padding="12,0,12,12">
            <CollectionView
                x:Name="LikesCollectionView"
                ItemsSource="{Binding Likes}"
                SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <StackLayout Padding="24"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="Center">
                        <Label Text="Ainda ninguÃ©m curtiu vocÃª ðŸ˜…"
                               FontSize="16"
                               TextColor="#444444"
                               HorizontalTextAlignment="Center" />
                        <Label Text="Continue dando likes para aumentar suas chances!"
                               FontSize="13"
                               TextColor="#777777"
                               HorizontalTextAlignment="Center"
                               Margin="0,6,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Card compacto de cada pessoa que curtiu -->
                        <Frame
                            Margin="4,0,4,12"
                            Padding="0"
                            CornerRadius="16"
                            HasShadow="False"
                            BorderColor="#E0E0E0"
                            BackgroundColor="White">

                            <Frame.GestureRecognizers>
                                <!-- Tap no card abre Discover -->
                                <TapGestureRecognizer Tapped="OnCardTapped" />
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="Auto,Auto,Auto">

                                <!-- FOTO -->
                                <Grid Grid.Row="0"
                                      HeightRequest="140">
                                    <Image
                                        Source="{Binding PhotoUrl}"
                                        Aspect="AspectFill" />
                                </Grid>

                                <!-- Nome + idade + cidade -->
                                <StackLayout Grid.Row="1"
                                             Padding="8,4,8,0"
                                             Spacing="2">
                                    <StackLayout Orientation="Horizontal" Spacing="2">
                                        <Label Text="{Binding DisplayName}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#222222" />

                                        <Label Text=", "
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#222222" />

                                        <Label Text="{Binding Age}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#222222" />
                                    </StackLayout>

                                    <Label Text="{Binding City}"
                                           FontSize="11"
                                           TextColor="#777777" />

                                    <Label Text="{Binding Bio}"
                                           FontSize="11"
                                           TextColor="#555555"
                                           LineBreakMode="TailTruncation" />
                                </StackLayout>

                                <!-- BotÃµes (Ã­cones) -->
                                <StackLayout Grid.Row="2"
                                             Orientation="Horizontal"
                                             HorizontalOptions="Center"
                                             Spacing="8"
                                             Margin="8,4,8,8">

                                    <!-- Match (like de volta) -->
                                    <Frame
                                        WidthRequest="38"
                                        HeightRequest="38"
                                        CornerRadius="19"
                                        HasShadow="False"
                                        Padding="0"
                                        BackgroundColor="#5d259c">
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding BindingContext.MatchCommand, Source={x:Reference LikesCollectionView}}"
                                                    CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>

                                            <Image Source="heart.png"
                                                   WidthRequest="20"
                                                   HeightRequest="20"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Frame>

                                    <!-- Adicionar amigo -->
                                    <Frame
                                        WidthRequest="38"
                                        HeightRequest="38"
                                        CornerRadius="19"
                                        HasShadow="False"
                                        Padding="0"
                                        BackgroundColor="#FFEDE7F6"
                                        BorderColor="#E0C7FA">
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding BindingContext.AddFriendCommand, Source={x:Reference LikesCollectionView}}"
                                                    CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>

                                            <Image Source="add.png"
                                                   WidthRequest="20"
                                                   HeightRequest="20"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Frame>

                                </StackLayout>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </ScrollView>

    </Grid>

</ContentPage>
