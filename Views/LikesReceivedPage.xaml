<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AmoraApp.Views.LikesReceivedPage"
    x:Name="LikesPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#fdfdfd"
    Shell.NavBarIsVisible="False">

    <!-- GRID RAIZ: header, info e lista -->
    <Grid RowDefinitions="Auto,Auto,*">

        <!-- HEADER -->
        <Grid Grid.Row="0"
              Padding="12,10,12,12"
              ColumnDefinitions="Auto,*"
              VerticalOptions="Start">

            <!-- Se quiser, dÃ¡ pra por botÃ£o de voltar aqui depois -->

            <StackLayout Grid.Column="1"
                         Orientation="Vertical"
                         Spacing="0"
                         Margin="0,0,0,0"
                         VerticalOptions="Center">
                <Label
                    Text="Quem curtiu vocÃª"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="#222222" />
                <Label
                    x:Name="PlanInfoLabel"
                    Text="Plano atual: GrÃ¡tis"
                    FontSize="12"
                    TextColor="#888888" />
            </StackLayout>
        </Grid>

        <!-- INFO / MENSAGEM -->
        <StackLayout Grid.Row="1"
                     Spacing="4"
                     Padding="12,0,12,8">
            <Label
                Text="Veja quem te deu like."
                FontSize="13"
                TextColor="#777777" />

            <Label
                x:Name="EmptyLabel"
                Text=""
                IsVisible="False"
                FontSize="13"
                TextColor="#777777" />
        </StackLayout>

        <!-- LISTA EM 2 COLUNAS -->
        <Grid Grid.Row="2" Margin="8,0,8,8">
            <CollectionView
                x:Name="LikesCollection"
                ItemsSource="{Binding Likes}"
                SelectionMode="None"
                ItemsLayout="VerticalGrid, 2">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- CARD -->
                        <Grid Padding="4">
                            <Frame
                                BackgroundColor="White"
                                CornerRadius="18"
                                HasShadow="False"
                                BorderColor="#F0E6FF"
                                Padding="0">

                                <Grid RowDefinitions="Auto,Auto,Auto"
                                      RowSpacing="6"
                                      Padding="8">

                                    <!-- FOTO / PLACEHOLDER -->
                                    <Grid Grid.Row="0" HeightRequest="120">
                                        <Frame CornerRadius="14"
                                               HasShadow="False"
                                               Padding="0"
                                               BackgroundColor="#FFF5EFFD">
                                            <Grid>
                                                <!-- Foto -->
                                                <Image
                                                    Source="{Binding PhotoUrl}"
                                                    Aspect="AspectFill"
                                                    IsVisible="True">
                                                    <Image.Triggers>
                                                        <DataTrigger TargetType="Image"
                                                                     Binding="{Binding PhotoUrl}"
                                                                     Value="">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Image"
                                                                     Binding="{Binding PhotoUrl}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                    </Image.Triggers>
                                                </Image>

                                                <!-- Placeholder quando nÃ£o tem foto -->
                                                <Grid IsVisible="False">
                                                    <Grid.Triggers>
                                                        <DataTrigger TargetType="Grid"
                                                                     Binding="{Binding PhotoUrl}"
                                                                     Value="">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Grid"
                                                                     Binding="{Binding PhotoUrl}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                    </Grid.Triggers>

                                                    <Grid BackgroundColor="#FFE7DCF9">
                                                        <Image
                                                            Source="user_placeholder.png"
                                                            HeightRequest="46"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center" />
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </Frame>
                                    </Grid>

                                    <!-- NOME + CIDADE (jÃ¡ vem formatada como 'Cidade, Idade') -->
                                    <StackLayout Grid.Row="1" Spacing="2">
                                        <Label
                                            Text="{Binding DisplayName}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            TextColor="#222222" />
                                        <Label
                                            Text="{Binding City}"
                                            FontSize="12"
                                            TextColor="#888888" />
                                    </StackLayout>

                                    <!-- BOTÃ•ES (like + add) -->
                                    <Grid Grid.Row="2"
                                          ColumnDefinitions="Auto,Auto"
                                          ColumnSpacing="8"
                                          HorizontalOptions="Center">

                                        <!-- Match / Like -->
                                        <Frame
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            BackgroundColor="#5D259C"
                                            CornerRadius="20"
                                            HasShadow="False"
                                            Padding="0">
                                            <Image
                                                Source="heart.png"
                                                HeightRequest="22"
                                                WidthRequest="22"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={x:Reference LikesPageRoot}, Path=MatchCommand}"
                                                    CommandParameter="{Binding}" />
                                            </Frame.GestureRecognizers>
                                        </Frame>

                                        <!-- Add amigo -->
                                        <Frame
                                            Grid.Column="1"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            BackgroundColor="#F4ECFF"
                                            BorderColor="#D9C8FF"
                                            CornerRadius="20"
                                            HasShadow="False"
                                            Padding="0">
                                            <Image
                                                Source="add.png"
                                                HeightRequest="22"
                                                WidthRequest="22"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={x:Reference LikesPageRoot}, Path=AddFriendCommand}"
                                                    CommandParameter="{Binding}" />
                                            </Frame.GestureRecognizers>
                                        </Frame>
                                    </Grid>

                                </Grid>
                            </Frame>

                            <!-- Tap no card abre Discover (se plano permitir) -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCardTapped" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- OVERLAY COBRINDO TUDO (header + lista) -->
        <Grid x:Name="LockOverlay"
              Grid.RowSpan="3"
              BackgroundColor="#D9000000"
              IsVisible="{Binding IsLocked}"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">

            <Frame
                BackgroundColor="#222836"
                CornerRadius="18"
                HasShadow="False"
                Padding="18"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <StackLayout Spacing="8">
                    <Label
                        Text="Veja quem curtiu vocÃª"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="White" />
                    <Label
                        Text="VocÃª estÃ¡ no plano GrÃ¡tis. Assine o Plus ou Premium para ver quem te curtiu."
                        FontSize="13"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        TextColor="#F3F3F3" />
                    <Button
                        Text="Ver planos"
                        FontSize="15"
                        BackgroundColor="#5D259C"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnUpgradeClicked" />
                    <Label
                        Text="Enquanto isso, vocÃª jÃ¡ estÃ¡ recebendo curtidas normalmente ðŸ¥°"
                        FontSize="11"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        TextColor="#DDDDDD" />
                </StackLayout>
            </Frame>

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnUpgradeOverlayTapped" />
            </Grid.GestureRecognizers>
        </Grid>

    </Grid>
</ContentPage>
