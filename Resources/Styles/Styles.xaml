<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- COLORS (usando suas cores existentes) -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>

    <!-- ===== GLOBAL TEXT ===== -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- BUTTON -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="#5d259c"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="22"/>
        <Setter Property="HeightRequest" Value="48"/>
    </Style>

    <!-- CHECKBOX -->
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="#5d259c"/>
        <Setter Property="MinimumHeightRequest" Value="28"/>
        <Setter Property="MinimumWidthRequest" Value="28"/>
    </Style>

    <!-- =============================================== -->
    <!-- ============= FORMULARIOS MODERNOS ============= -->
    <!-- =============================================== -->

    <!-- ENTRY -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <!-- EDITOR -->
    <Style TargetType="Editor">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}"/>
    </Style>

    <!-- PICKER -->
    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="TitleColor" Value="{StaticResource Gray400}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <!-- DATEPICKER -->
    <Style TargetType="DatePicker">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <!-- TIMEPICKER -->
    <Style TargetType="TimePicker">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <!-- =============================================== -->
    <!-- ========= ENVOLTÓRIOS (BORDAS MODERNAS) ======== -->
    <!-- =============================================== -->

    <Style TargetType="Border" x:Key="EntryBorder">
        <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="BackgroundColor" Value="White"/>
    </Style>

    <Style TargetType="Border" x:Key="PickerBorder">
        <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="BackgroundColor" Value="White"/>
    </Style>

    <Style TargetType="Border" x:Key="EditorBorder">
        <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BackgroundColor" Value="White"/>
    </Style>

    <Style TargetType="Border" x:Key="DatePickerBorder">
        <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="BackgroundColor" Value="White"/>
    </Style>

</ResourceDictionary>
